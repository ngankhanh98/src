<div class="container">
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col-8 border border-secondary row">
            <div class="float-right col-12 mt-3">
                <a type="button" class="btn btn-sm btn-success font-weight-bold" style="font-size: 20pt;"
                    href="/companies/{{id}}/post">+</a>
            </div>
            <div class="col-12 mt-3 mb-3">
                {{#each jobs}}
                <div class="card col-12" style="width: 700px;">
                    <div class="card-body row">
                        <h5 class="card-title col-12">{{this.name}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted col-6">Chỉ tiêu: {{this.slots}}</h6>
                        <h6 class="card-subtitle mb-2 text-muted col-6">Lương: {{this.salary}}</h6>
                        <p class="card-text col-12">Ngày hết hạn: {{this.expiration}}</p>
                        <p class="card-text col-6">Vị trí làm việc: {{this.location}}</p>
                        <p class="card-text col-6">Loại công việc: {{this.type}}</p>
                        {{#each this.skills}}
                        <div class="skillBox">
                            <div class="skill">
                                {{this.name}}
                            </div>
                            <div class="level">
                                {{this.level}}
                            </div>
                        </div>
                        {{/each}}
                        <a href="/jobs/{{this.id}}" class="card-link col-12">Chi tiết</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="col-2"></div>
    </div>
</div>
