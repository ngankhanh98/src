{{#if empty}}
  <h1>Job not found!</p>
{{else}}
  <h1>{{job.id}} &hyphen; {{job.name}}</h1>

  <p><b>Description:</b> {{job.description}}</p>
  <p><b>Company:</b> {{job.description}}</p>
  <p><b>Location:</b> {{job.location}}</p>
  <p><b>Type:</b> {{job.type}}</p>
  <p><b>Salary:</b> {{job.salary}}</p>
  <p><b>Expiration:</b> {{job.expiration}}</p>

  <ul>
    {{#each job.skills }}
    <li>{{name}} - {{level}}</li>
    {{/each}}
  </ul>

  <p><b>Slots:</b> {{job.slots}}</p>
  <p><b>Benifits:</b> {{job.benifits}}</p>
{{/if}}
